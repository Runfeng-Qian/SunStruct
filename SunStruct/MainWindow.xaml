<Window
    x:Class="SunStruct.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SunStruct"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Add Resources to the main Grid -->
        <Grid.Resources>
            <local:BoolToStarBrushConverter x:Key="BoolToStarBrushConverter"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Grid Grid.Row="0" Background="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                <!-- Placeholder for logo -->
                <Ellipse Width="20" Height="20" Fill="#F89406" Stroke="White" StrokeThickness="2"/>
                <TextBlock Text="SunStruct" FontSize="18" Foreground="White" FontWeight="SemiBold" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area with Navigation -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Side Navigation -->
            <Grid Grid.Column="0" Background="#333333">
                <StackPanel>
                    <!-- Home Button -->
                    <Button Height="40" Background="Transparent" BorderThickness="0">
                        <StackPanel>
                            <FontIcon Glyph="&#xE80F;" Foreground="#F89406"/>
                            <TextBlock Text="Home" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Projects Button -->
                    <Button Height="40" Background="Transparent" BorderThickness="0">
                        <StackPanel>
                            <FontIcon Glyph="&#xE8A5;" Foreground="#999999"/>
                            <TextBlock Text="Projects" FontSize="10" Foreground="#999999" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Background="White">
                <!-- New Design Button -->
                <Button Content="New Design" Width="150" Height="40" 
                        Background="#F89406" Foreground="White" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" 
                        Margin="0,20,0,0" FontWeight="SemiBold"/>

                <!-- Recent Projects -->
                <Grid Margin="20,80,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Recent Projects Header -->
                    <TextBlock Grid.Row="0" Text="Recent Projects" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <!-- Search Bar -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <TextBox PlaceholderText="Search Projects" Height="32"/>
                    </Grid>

                    <!-- Projects List - Changed from x:Bind to Binding -->
                    <ListView Grid.Row="2" BorderBrush="#EEEEEE" BorderThickness="1"
                              ItemsSource="{Binding Projects}">
                        <ListView.ItemTemplate>
                            <!-- Removed x:DataType since using standard binding -->
                            <DataTemplate>
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Star Icon - Changed from x:Bind to Binding -->
                                    <Button Grid.Column="0" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE734;" 
                                                  Foreground="{Binding IsStarred, Converter={StaticResource BoolToStarBrushConverter}}"/>
                                    </Button>

                                    <!-- Project Info - Changed from x:Bind to Binding -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#666666"/>
                                    </StackPanel>

                                    <!-- Delete Button -->
                                    <Button Grid.Column="2" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE74D;" Foreground="#999999"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>